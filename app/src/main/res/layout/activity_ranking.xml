<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="16dp"
        android:gravity="center_horizontal"
        android:text="Rànking"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="176dp"
        android:layout_height="274dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="16dp"
        android:foregroundGravity="center_vertical|center_horizontal"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4">

        <TextView
            android:id="@+id/rankLabel1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Primer lloc"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/rankText1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="-"
            android:textAlignment="center"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/rankLabel2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Segon lloc"
            android:textAlignment="center"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/rankText2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="-"
            android:textAlignment="center"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/rankLabel3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tercer lloc"
            android:textAlignment="center"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/rankText3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="-"
            android:textAlignment="center"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/rankLabel4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Quart lloc"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/rankText4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="-"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/rankLabel5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cinquè lloc"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/rankText5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="-"
            android:textAlignment="center" />

    </LinearLayout>

    <Button
        android:id="@+id/rankTornar"
        android:layout_width="127dp"
        android:layout_height="70dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="160dp"
        android:onClick="onClickBotoBack"
        android:text="Tornar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />
</androidx.constraintlayout.widget.ConstraintLayout>