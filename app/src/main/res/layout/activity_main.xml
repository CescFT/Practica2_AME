<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/seg_color"
        android:layout_width="121dp"
        android:layout_height="25dp"
        tools:layout_editor_absoluteX="120dp"
        tools:layout_editor_absoluteY="117dp" />

    <TextView
        android:layout_width="121dp"
        android:layout_height="25dp"
        tools:layout_editor_absoluteX="132dp"
        tools:layout_editor_absoluteY="551dp" />

    <TextView
        android:layout_width="149dp"
        android:layout_height="23dp"
        android:text="@string/Resultat"
        tools:layout_editor_absoluteX="120dp"
        tools:layout_editor_absoluteY="512dp" />

    <TextView
        android:layout_width="121dp"
        android:layout_height="25dp"
        android:text="@string/app_name"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.065" />

    <ImageView
        android:layout_width="316dp"
        android:layout_height="291dp"
        android:src="@drawable/dot"
        tools:layout_editor_absoluteX="28dp"
        tools:layout_editor_absoluteY="194dp" />

    <Button
        android:id="@+id/botoVerd"
        android:layout_width="76dp"
        android:layout_height="39dp"
        android:background="@drawable/bttn_personalitzat_verd"
        android:padding="10dp"
        android:text="@string/verd"
        android:onClick="bttnOnClick"
        android:textColor="#ffffff"
        tools:layout_editor_absoluteX="241dp"
        tools:layout_editor_absoluteY="313dp" />

    <Button
        android:id="@+id/botoGroc"
        android:layout_width="76dp"
        android:layout_height="39dp"
        android:background="@drawable/bttn_personalitzat_groc"
        android:text="@string/groc"
        android:textColor="#000000"
        android:onClick="bttnOnClick"
        tools:layout_editor_absoluteX="44dp"
        tools:layout_editor_absoluteY="316dp" />

    <Button
        android:id="@+id/botoVermell"
        android:layout_width="76dp"
        android:layout_height="39dp"
        android:background="@drawable/bttn_personalitzat_vermell"
        android:padding="10dp"
        android:text="@string/verd"
        android:onClick="bttnOnClick"
        android:textColor="#ffffff"
        tools:layout_editor_absoluteX="142dp"
        tools:layout_editor_absoluteY="399dp" />

    <Button
        android:id="@+id/botoBlau"
        android:layout_width="76dp"
        android:layout_height="39dp"
        android:background="@drawable/bttn_personalitzat_blau"
        android:text="@string/blau"
        android:onClick="bttnOnClick"
        android:textColor="#ffffff"
        tools:layout_editor_absoluteX="142dp"
        tools:layout_editor_absoluteY="226dp" />


</androidx.constraintlayout.widget.ConstraintLayout>